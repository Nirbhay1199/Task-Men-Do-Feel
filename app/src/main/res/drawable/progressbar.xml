<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:startColor="#77CFD3CF"
                android:centerColor="#99BABDBA"
                android:centerY="0.75"
                android:endColor="#C7CCC7"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient
                    android:startColor="#80E31B1B"
                    android:centerColor="#F50057"
                    android:centerY="0.75"
                    android:endColor="#FF1744"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="15dp" />
                <gradient
                    android:startColor="#BA1D1D"
                    android:endColor="#DD1F1F"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>